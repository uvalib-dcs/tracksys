<div>
   <% if admin %>
      <span class='disp-item' id='category'><%= project.category.name if !project.category.blank? %></span>
      <select class='hidden edit-item' id='category-edit' >
         <% Category.all.order(name: :asc).each do |c| %>
            <% sel = ""
               sel = 'selected=selected' if c.id == project.category_id %>
            <option <%= sel %> value="<%= c.id %>"><%= c.name %></option>
         <% end %>
      </select>
   <% else %>
      <span><%= project.category.name if !project.category.blank? %></span>
   <% end %>
</div>
