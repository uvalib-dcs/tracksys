<div>
   <% if project.unit.metadata.ocr_hint.blank? %>
      <span class="disp-ocr empty" id='ocr-hint'>Empty</span>
   <% else %>
      <span class='disp-ocr' id='ocr-hint'><%= project.unit.metadata.ocr_hint.name %></span>
   <% end %>
   <select class='hidden edit-ocr' id='ocr-hint-edit' >
       <option>Select an OCR Hint</option>
      <% OcrHint.all.each do |p| %>
         <% sel = ""
            sel = 'selected=selected' if p.id == project.unit.metadata.ocr_hint_id %>
          <option <%= sel %> value="<%= p.id %>"><%= p.name %></option>
      <% end %>
   </select>
</div>
