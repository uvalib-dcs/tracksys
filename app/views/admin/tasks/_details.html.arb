            row ("Lens") do |task|
               raw("<span class='camera' id='lens'>#{task.lens}</span><input type='text' class='hidden camera' id='lens-edit' value='#{task.lens}'/>")
            end
            row ("Resolution") do |task|
               raw("<span class='camera' id='resolution'>#{task.resolution}</span><input type='text' class='hidden camera' id='resolution-edit' value='#{task.resolution}'/>")
            end
         end
         div class: "mini-button-bar" do
            span class: "mf-action-button", id: "edit-camera" do "Edit" end
            span class: "mf-action-button hidden", id: "save-camera"  do "Save" end
            span class: "mf-action-button hidden", id: "cancel-camera"  do "Cancel" end
         end
      end
   end
