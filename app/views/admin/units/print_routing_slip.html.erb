        <div class="item w55 section-underline">Customer Status: <%= customer_status %></div>
        <div class="item w10"></div>
        <div class="item w35"></div>
    </div>
    <div class="row heading border_pretty">
        <div class="item w90">Unit Information</div>
    </div>
    <%
