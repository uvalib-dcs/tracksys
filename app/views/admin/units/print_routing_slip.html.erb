        special_instructions = ''
      else
        special_instructions = raw(@unit.special_instructions.gsub(/\n/, '<br />'))
      end
    %>
    <div class="row">
        <div class="item w80 red">Unit Special Instructions / Pages to be scanned:</div>
    </div>
    <div class="row">
        <div class="item w80 red"><%= special_instructions %></div>
