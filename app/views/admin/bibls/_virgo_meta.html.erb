<div class="attributes_table">
   <table border="0" cellspacing="0" callpadding="0">
      <% if !defined?(edit) %>
         <tr class="row"><th>CATALOG KEY</th><td><%= raw format_td(@virgo_meta[:catalog_key]) %></td></tr>
         <tr class="row"><th>BARCODE</th><td><%= raw format_td(@virgo_meta[:barcode]) %></td></tr>
      <% else %>
         <tr class="row">
            <th>CATALOG KEY</th>
            <td>
               <input class='bibl-edit' maxlength="255" id="bibl_catalog_key" type="text" value="<%= @virgo_meta[:catalog_key] %>" name="bibl[catalog_key]">
            </td>
         </tr>
         <tr class="row">
            <th>BARCODE</th>
            <td>
               <input class='bibl-edit' maxlength="255" id="bibl_barcode" type="text" value="<%= @virgo_meta[:barcode] %>" name="bibl[barcode]">
            </td>
         </tr>
         <tr class="row">
            <td colspan="2" style="text-align:right"><span id="refresh-metadata" class="ocr-button">Refresh Metadata</span></td>
         </tr>
      <% end %>
      <tr class="row"><th>TITLE</th><td class="bibl-data" id="title"><%= raw format_td(@virgo_meta[:title]) %></td></tr>
      <tr class="row"><th>CREATOR NAME</th><td  class="bibl-data" id="creator_name"><%= raw format_td( @virgo_meta[:creator_name]) %></td></tr>
      <tr class="row"><th>CREATOR NAME TYPE</th><td  class="bibl-data" id="creator_name_type"><%= raw format_td(@virgo_meta[:creator_name_type]) %></td></tr>
      <tr class="row"><th>CALL NUMBER</th><td  class="bibl-data" id="call_number"><%= raw format_td(@virgo_meta[:call_number]) %></td></tr>
      <tr class="row"><th>YEAR</th><td  class="bibl-data" id="year"><%= raw format_td(@virgo_meta[:year]) %></td></tr>
      <tr class="row"><th>YEAR TYPE</th><td  class="bibl-data" id="year_type"><%= raw format_td(@virgo_meta[:year_type]) %></td></tr>
      <tr class="row"><th>PLACE OF PUBLICATION</th><td  class="bibl-data" id="publication_place"><%= raw format_td(@virgo_meta[:publication_place]) %></td></tr>
      <tr class="row"><th>COPY</th><td  class="bibl-data" id="copy"><%= raw format_td(@virgo_meta[:copy]) %></td></tr>
      <tr class="row"><th>LOCATION</th><td  class="bibl-data" id="location"><%= raw format_td(@virgo_meta[:location]) %></td></tr>
   </table>
</div>
