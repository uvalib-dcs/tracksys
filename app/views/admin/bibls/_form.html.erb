<%= semantic_form_for([:admin, @bibl]) do |f| %>

  <%= f.inputs "Basic Information", :class => 'three-column panel' do %>

    <%= f.input :catalog_key %>
    <%= f.input :barcode %>
    <%= f.input :title, :input_html => { :rows=>5, :readonly => true } %>
    <%= f.input :creator_name, :input_html => { :readonly => true } %>
    <%= f.input :call_number, :input_html => { :readonly => true } %>
    <%= f.input :year, :input_html => { :readonly => true } %>
    <%= f.input :year_type, :input_html => { :readonly => true } %>
    <%= f.input :publication_place, label: "Place of Publication", :input_html => { :readonly => true } %>
    <%= f.input :copy, :as => :string, :input_html => { :readonly => true } %>
    <%= f.input :location, :input_html => { :readonly => true } %>
  <% end %>

  <%= f.inputs "Detailed Bibliographic Information", :class => 'three-column panel' do %>
    <%= f.input :cataloging_source, :input_html => { :readonly => true } %>
    <%= f.input :citation, :input_html => { :rows => 5, :readonly => true } %>
    <%= f.input :description, :input_html => { :readonly => true }  %>
    <%= f.input :title_control, :input_html => { :readonly => true }  %>
    <%= f.input :series_title, :input_html => { :readonly => true }  %>
    <%= f.input :volume, :input_html => { :readonly => true }  %>
    <%= f.input :issue, :input_html => { :readonly => true }  %>
    <%= f.input :creator_name_type, :input_html => { :readonly => true }  %>
  <% end %>

  <%= f.inputs "Administrative Information", :class => 'three-column panel' do %>
    <%= f.input :is_approved, :as => :radio %>
    <%= f.input :is_personal_item, :as => :radio %>
    <%= f.input :is_manuscript, :as => :radio %>
    <%= f.input :is_collection, :as => :radio %>
    <%= f.input :resource_type, :as => :select, :collection => Bibl::RESOURCE_TYPES, :input_html => {:class => 'chosen-select',  :style => 'width: 200px'} %>
    <%= f.input :genre, :as => :select, :collection => Bibl::GENRES, :input_html => {:class => 'chosen-select',  :style => 'width: 200px'} %>
    <%= f.input :date_external_update, :as => :string, :input_html => {:class => "datepicker"} %>
  <% end %>

  <%= f.inputs "Digital Library Information", :class => 'columns-none panel', :style=>"margin-top:15px" do %>
      <%= f.input :pid, :as => :string, :input_html => { :readonly => true } %>
      <%= f.input :exemplar, :as => :select, :collection => f.object.dl_master_files.map(&:filename), :input_html => {:class => 'chosen-select',  :style => 'width: 250px'} %>
      <%= f.input :availability_policy %>
      <%= f.input :discoverability, :as => :select %>
      <%= f.input :use_right, label: "Right Statement" %>
      <%= f.input :indexing_scenario %>
      <%= f.input :dpla, :as => :radio %>
      <% if @bibl.dpla %>
      <%= f.input :parent_bibl_id, :as => :number  %>
      <% end %>
      <%= f.input :date_dl_ingest, :as => :string, :input_html => {:class => "datepicker"} %>
      <%= f.input :date_dl_update, :as => :string, :input_html => {:class => "datepicker"} %>
      <%= f.input :collection_facet, :as => :string %>
      <%= f.input :desc_metadata,  :input_html => { :rows => 15 } %>
  <% end %>

  <%= f.actions :class => 'columns-none' %>

<% end %>
